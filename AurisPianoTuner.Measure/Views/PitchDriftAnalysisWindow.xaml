<Window x:Class="AurisPianoTuner.Measure.Views.PitchDriftAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pitch Drift Analysis" 
        Height="500" Width="700" 
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Pitch Drift Analysis" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Measurement Info -->
        <Border Grid.Row="1" Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,15" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Old Measurement -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Old Measurement:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtOldDate" Text="-" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Temperature:" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtOldTemp" Text="-" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Humidity:" Margin="0,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtOldHumidity" Text="-" Margin="0,0,0,5"/>

                <!-- New Measurement -->
                <TextBlock Grid.Row="0" Grid.Column="2" Text="New Measurement:" FontWeight="Bold" Margin="20,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="3" x:Name="TxtNewDate" Text="-" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Temperature:" Margin="20,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="TxtNewTemp" Text="-" Margin="0,0,0,5"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Humidity:" Margin="20,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="3" x:Name="TxtNewHumidity" Text="-" Margin="0,0,0,5"/>

                <!-- Time Elapsed -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Time Elapsed:" FontWeight="Bold" Margin="0,10,10,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" x:Name="TxtTimeElapsed" Text="-" Margin="0,10,0,0"/>
            </Grid>
        </Border>

        <!-- Analysis Results -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Drift Summary -->
                <Border Background="White" Padding="15" CornerRadius="5" Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Drift Summary" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Average Drift:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtAverageDrift" Text="-" FontWeight="Bold" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Standard Deviation:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TxtStdDev" Text="-" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Expected Drift:" Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TxtExpectedDrift" Text="-" Margin="0,0,0,5"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Assessment:" Margin="0,0,10,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TxtAssessment" Text="-" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Checkpoint Measurements -->
                <Border Background="White" Padding="15" CornerRadius="5" BorderBrush="Gray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Checkpoint Measurements" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid x:Name="DgCheckpoints" 
                                  AutoGenerateColumns="False" 
                                  IsReadOnly="True"
                                  RowBackground="White"
                                  AlternatingRowBackground="#F9F9F9"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Note" Binding="{Binding NoteName}" Width="80"/>
                                <DataGridTextColumn Header="Old (Hz)" Binding="{Binding OldFrequency, StringFormat=F2}" Width="100"/>
                                <DataGridTextColumn Header="New (Hz)" Binding="{Binding NewFrequency, StringFormat=F2}" Width="100"/>
                                <DataGridTextColumn Header="Drift (Hz)" Binding="{Binding DriftHz, StringFormat=+0.00;-0.00}" Width="100"/>
                                <DataGridTextColumn Header="Drift (cents)" Binding="{Binding DriftCents, StringFormat=+0.0;-0.0}" Width="110"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="BtnApplyOffset" Content="Apply Offset to All Notes" Width="180" Height="35" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button x:Name="BtnClose" Content="Close" Width="100" Height="35" 
                    Background="#757575" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
